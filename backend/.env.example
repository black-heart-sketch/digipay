# Environment
NODE_ENV=development
PORT=5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/digipay

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# FreemoPay API Configuration
FREEMOPAY_API_BASE_URL=https://api.freemopay.com
FREEMOPAY_APP_KEY=your-freemopay-app-key
FREEMOPAY_SECRET_KEY=your-freemopay-secret-key
PAYMENT_TEST_MODE=true

# Webhook Configuration
WEBHOOK_CALLBACK_URL=http://localhost:5000/api/webhooks/freemopay

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@digipay.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Commission Settings
DEFAULT_COMMISSION_RATE=2.0
STANDARD_TIER_RATE=2.0
PREMIUM_TIER_RATE=1.5
ENTERPRISE_TIER_RATE=1.0
